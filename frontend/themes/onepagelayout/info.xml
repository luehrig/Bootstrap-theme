<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>onepagelayout</name>
	<version>0.0.1</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Based on Bootstrap, from Twitter.
			Simple One Page Layout
		]]>
	</description>
	<authors>
		<author>
			<name>Max Luehrig</name>
			<url>http://www.bymaxe.de</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="Default" path="core/layout/templates/default.tpl">
			<positions>
				<position name="left" />
				<position name="main" />
			</positions>
			<format>
				[left,main,main,main]
			</format>
		</template>
		<template label="Home" path="core/layout/templates/home.tpl">
			<positions>
				<position name="main" />
				<position name="left" />
				<position name="middle" />
				<position name="right" />
			</positions>
			<format>
				[main,main,main],[left,middle,right]
			</format>
		</template>
	</templates>
</theme>